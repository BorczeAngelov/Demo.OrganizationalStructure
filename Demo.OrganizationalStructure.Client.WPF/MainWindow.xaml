<Window x:Class="Demo.OrganizationalStructure.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.OrganizationalStructure.Client.WPF"
        mc:Ignorable="d"
        Title="Organizational Structure WPF Client"
        Height="300"
        Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal"
                    Margin="5">

            <Button Content="Connect"
                    Command="{Binding ConnectCommand}" 
                    Padding="5,0"/>

            <Button Content="(Demo) Ping server"
                    Command="{Binding PingServerCommand}" 
                    Margin="5,0,0,0"
                    Padding="5,0"/>
        </StackPanel>
    </Grid>
</Window>
